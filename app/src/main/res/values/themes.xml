<resources>
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.Button" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/likes_checkbox_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/common_spacing</item>
        <item name="android:minHeight">@dimen/common_spacing</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_likes_selector</item>
        <item name="iconTint">@color/likes_checkbox_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/icons_size</item>
        <item name="android:minHeight">@dimen/icons_size</item>
    </style>

</resources>